---
import '../styles/global.css'

const { title } = Astro.props;
---

<html lang="en" class="w-screen h-screen">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Clerk + Astro Cloudflare Quick Start</title>
  </head>
  <body class="h-full w-full flex flex-col">
    <header class="bg-linear-to-r from-purple-950 to-purple-500 text-white flex items-center justify-between p-2 shadow">
      <a href="/"> <img src="/light-logo.png" width="50px" alt="clerk-logo"/></a>
      <h1 class="text-4xl font-bold">{title}</h1>
      <nav>
        <!-- <SignedOut>
          <a href="/sign-in">Sign In</a>
        </SignedOut>
        <SignedIn>
          <UserButton />
        </SignedIn> -->
      </nav>
    </header>
    <main class="flex flex-col items-center w-full grow bg-[#19181b] text-slate-100">
      <slot />
    </main>
  </body>
</html>
